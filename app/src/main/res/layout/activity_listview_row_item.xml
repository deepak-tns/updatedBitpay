<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background">

    <RelativeLayout
        android:id="@+id/circularImageViewLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dip">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/activityImageView"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="centerCrop"
            android:src="@drawable/sent_receive"
            app:siBorderAlpha="0"
            app:siBorderColor="@color/colorPrimary"
            app:siBorderWidth="1dip" />

        <TextView
            android:id="@+id/activityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toRightOf="@+id/activityImageView"
            android:gravity="center"
            android:text="Ankit topped up a mobile" />

        <TextView
            android:id="@+id/timeTextVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activityImageView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activityTextView"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:text="2min ago" />


    </RelativeLayout>


</RelativeLayout>
