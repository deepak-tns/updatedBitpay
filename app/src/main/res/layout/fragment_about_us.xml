<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@drawable/bg_app"
    tools:context="com.bitpay.bitpay.fragment.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        tools:context="com.bitpay.bitpay.fragment.AboutUsFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/logo_about_us" />

        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/text_company_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_xlarge" />

        <TextView
            android:id="@+id/companyWebsiteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:text="@string/text_company_website"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fbIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:scaleType="center"
                android:src="@drawable/fb_icon" />

            <ImageView
                android:id="@+id/twitterIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:scaleType="center"
                android:src="@drawable/twitter_icon" />

            <ImageView
                android:id="@+id/gPlusIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:scaleType="center"
                android:src="@drawable/google_plus_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="top|center"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/versionCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_version_code"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_xlarge" />

            <TextView
                android:id="@+id/allRightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                android:text="@string/text_all_right"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_xxlarge" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

