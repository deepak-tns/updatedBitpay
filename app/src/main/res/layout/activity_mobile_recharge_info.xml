<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context="com.bitpay.bitpay.activity.VerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">


        <TextView
            android:id="@+id/tnxMessageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/text_mobile_recharge_msg"
            android:textColor="@color/colorApproved"
            android:textSize="@dimen/font_xxlarge" />

        <TextView
            android:id="@+id/thanksMsgTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:gravity="center"
            android:text="@string/text_thank_you"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_xlarge" />

        <TextView
            android:id="@+id/lblTransactionIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/font_xxXlarge"
            android:text="@string/text_transaction_id"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/transactionIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:gravity="center"
            android:text="#0000000000"
            android:textColor="@color/colorTextBit"
            android:textSize="@dimen/font_xxlarge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pdfDownlodeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_xXlarge"
                android:src="@drawable/pdf_icon" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_buttons"
                android:text="@string/btn_home"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_xlarge" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
