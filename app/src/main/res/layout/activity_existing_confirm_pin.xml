<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context="com.bitpay.bitpay.activity.NewPinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <TextView
            android:id="@+id/enterPinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center_horizontal"
            android:text="@string/text_enter_pin"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pinBox0"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:background="@drawable/bg_circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox1"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/bg_circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox2"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/bg_circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox3"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/bg_circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/msgErrorPin"
                android:textColor="@color/colorTextRed"
                android:textSize="@dimen/font_large"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/forgotPinTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:gravity="center|right"
                android:text="@string/text_forgot_pin"
                android:textColor="@color/colorTextForgotPin"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_margin="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/colorBlack" />

        <LinearLayout
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="4"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button5"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="5"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button6"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="6"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="7"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button8"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="8"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button9"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="9"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonExit"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="Exit"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button0"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:padding="6dip"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />

            <ImageButton
                android:id="@+id/buttonDeleteBack"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@drawable/btn_back"
                android:gravity="center"
                android:padding="6dip"
                android:text="Delete"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_margin="@dimen/margin_large"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/pinDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_note_pin"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_large" />

    </LinearLayout>
</ScrollView>